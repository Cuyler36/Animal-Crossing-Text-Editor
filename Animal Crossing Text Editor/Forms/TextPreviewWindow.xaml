<Window x:Class="Animal_Crossing_Text_Editor.Forms.TextPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Animal_Crossing_Text_Editor"
        mc:Ignorable="d"
        Title="TextPreviewWindow" Height="300" Width="600" ResizeMode="NoResize">
    <Grid>
        <Image x:Name="windowBackground" Margin="0" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
        <Image x:Name="textPreviewImage" Margin="90, 65, 0, 0" Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="prevButton" Content="Previous" Width="75" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10" Click="prevButton_Click"/>
        <Button x:Name="nextButton" Content="Next" Width="75" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10" Click="nextButton_Click"/>
    </Grid>
</Window>
